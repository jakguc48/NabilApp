@model IEnumerable<NabilApp.Models.Employee>

@{
    ViewBag.Title = "Pracownicy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pracownicy</h2>

@if (!Model.Any())
{
    <p>Nie mamy jeszcze żadnych dań w naszej karcie</p>
}
else
{
    <table>
        <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td> @employee.Id</td>
                <td>@Html.ActionLink(employee.LastName + " " + employee.FirstName, "Details", "Employees", new { id = employee.Id }, null)</td>
            </tr>
        }
        </tbody>
    </table>
}

